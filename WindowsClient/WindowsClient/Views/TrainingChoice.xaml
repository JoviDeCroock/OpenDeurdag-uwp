<Page
    x:Class="WindowsClient.Views.TrainingChoice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsClient.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
    mc:Ignorable="d">

    <Grid Style="{StaticResource HoGent_Grid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- header -->
        <Border Grid.Row="0" Background="#006fb8;">
            <TextBlock Style="{StaticResource HoGent_TextBlockHeader}"
                       Text="Opleidingen" />
        </Border>

        <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" Grid.Row="1">
            <ListView x:Name="listViewTrainingsGent" HorizontalAlignment="Stretch" Width="Auto"
                      IsItemClickEnabled="True"
                      ItemClick="listViewHoGentItem_Click">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Background="Transparent" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" MaxWidth="200">
                            <Image Source="{Binding Image}"/>
                            <TextBlock HorizontalAlignment="Center"
                                    x:Name="Training"
                                    Text="{Binding Name}"
                                    Style="{StaticResource Hogent_TextBlockNormal}"
                                       Margin="10" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock Style="{StaticResource Hogent_TextBlockFeedTitle}" x:Name="chosenTraining"/>
            <TextBlock Style="{StaticResource Hogent_TextBlockNormal}" x:Name="descriptionOfTraining"/>
            <TextBlock Style="{StaticResource Hogent_TextBlockNormal}" Text="U kan deze richting volgen in:"/>
            <TextBlock Style="{StaticResource Hogent_TextBlockNormal}" x:Name="CampussesOfTraining"/>
        </StackPanel>

