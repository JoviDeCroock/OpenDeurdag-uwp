<Page
    x:Class="WindowsClient.Views.NewsfeedFilter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsClient.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Style="{StaticResource HoGent_Grid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- header -->
        <Border Grid.Row="0" Background="#006fb8;">
            <TextBlock Style="{StaticResource HoGent_TextBlockHeader}"
                       Text="Newsfeed" />
        </Border>
        <Button  Grid.Row="0" Click="onHomeButton_Click" Style="{StaticResource HoGent_ButtonHome}" />

        <!-- items -->
        <TextBlock Text="Kies welke feeds u wil zien:"
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   Margin="20 0 0 0"
                   FontSize="24"
                   Foreground="White"/>

        <CheckBox Style="{StaticResource HoGent_Checkbox}"
                  Grid.Row="2" 
                  Content="blabla"/>

        <CheckBox Style="{StaticResource HoGent_Checkbox}"
                  Grid.Row="3" 
                  Content="blabla"/>

        <CheckBox Style="{StaticResource HoGent_Checkbox}"
                  Grid.Row="4" 
                  Content="blabla"/>

        <CheckBox Style="{StaticResource HoGent_Checkbox}"
                  Grid.Row="5" 
                  Content="blabla"/>

        <Button Style="{StaticResource HoGent_ButtonStyle}"
                Grid.Row="6"
                Content="OK"/>

    </Grid>
</Page>
